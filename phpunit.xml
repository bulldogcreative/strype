<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Balance">
            <file>tests/BalanceTests.php</file>
        </testsuite>
        <testsuite name="Charge">
            <file>tests/ChargeTests.php</file>
        </testsuite>
        <testsuite name="Customer">
            <file>tests/CustomerTests.php</file>
        </testsuite>
        <testsuite name="Dispute">
            <file>tests/DisputeTests.php</file>
        </testsuite>
        <testsuite name="Event">
            <file>tests/EventTests.php</file>
        </testsuite>
        <testsuite name="File">
            <file>tests/FileTests.php</file>
        </testsuite>
        <testsuite name="FileLink">
            <file>tests/FileLinkTests.php</file>
        </testsuite>
        <testsuite name="Payout">
            <file>tests/PayoutTests.php</file>
        </testsuite>
        <testsuite name="Product">
            <file>tests/ProductTests.php</file>
        </testsuite>
        <testsuite name="Refund">
            <file>tests/RefundTests.php</file>
        </testsuite>
        <testsuite name="Trait">
            <file>tests/TraitTests.php</file>
        </testsuite>
        <testsuite name="Token">
            <file>tests/TokenTests.php</file>
        </testsuite>
        <testsuite name="Coupon">
            <file>tests/CouponTests.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
